@page
@model AddUsersModel

@{
	ViewData["Title"] = "Adauga user";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="login-form-bg h-100">
	<div class="container h-100">
		<div class="row justify-content-center h-100">
			<div class="col-xl-6 gradient-1-shadow">
				<div class="form-input-content">
					<div class="card login-form mb-0">
						<div class="card-body pt-5">
							<div class="h3"><span>Adaugare Cont</span></div>
							<form class="mt-5 mb-5 login-input" method="post">
								<div class="form-group">
									<label asp-for="Input.Email"></label>
									<input asp-for="Input.Email" class="form-control" />
									<span asp-validation-for="Input.Email" class="text-danger"></span>
								</div>
								<div class="form-group">
									<label asp-for="Input.FirstName"></label>
									<input asp-for="Input.FirstName" class="form-control" />
									<span asp-validation-for="Input.FirstName" class="text-danger"></span>
								</div>
								<div class="form-group">
									<label asp-for="Input.LastName"></label>
									<input asp-for="Input.LastName" class="form-control" />
									<span asp-validation-for="Input.LastName" class="text-danger"></span>
								</div>
								<div class="form-group">
									<label asp-for="Input.Password"></label>
									<input asp-for="Input.Password" class="form-control" />
									<span asp-validation-for="Input.Password" class="text-danger"></span>
								</div>

								<div class="form-group">
									<label asp-for="Input.ConfirmPassword"></label>
									<input asp-for="Input.ConfirmPassword" class="form-control" />
									<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
								</div>
								<div class="form-check m-2">
									<input asp-for="Input.IsOwner" class="form-check-input" type="checkbox" />
									<label class="form-check-label" asp-for="Input.IsOwner"></label>
									<span asp-validation-for="Input.IsOwner" class="text-danger"></span>
								</div>
								<div class="form-group">
									<label asp-for="Input.RestaurantRefId"></label>
									<select asp-for="Input.RestaurantRefId">
										<option value="0">Selecteaza</option>
										@foreach(var rest in Model.Restaurante){
											<option value="@rest.RestaurantId">@rest.Name</option>
										}
									</select>
									<span asp-validation-for="Input.RestaurantRefId" class="text-danger"></span>
								</div>
								<div class="form-check m-2">
									<input asp-for="Input.IsDriver" class="form-check-input" type="checkbox" />
									<label class="form-check-label" asp-for="Input.IsDriver"></label>
									<span asp-validation-for="Input.IsDriver" class="text-danger"></span>
								</div>

								<button type="submit" class="btn login-form__btn submit w-100">Creaza</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>