@using Microsoft.AspNetCore.Identity
@using OShop.Database;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    string returnUrl = null;
    var query = ViewContext.HttpContext.Request.Query;
    if (query.ContainsKey("returnUrl"))
    {
        returnUrl = query["returnUrl"];
    }
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/RolesManagement/Index" title="Manage">Roles Management</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="AdminPanel" asp-page="/Index" title="Manage">AdminPanel</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="AdminPanel" asp-page="/OrderManage" title="Manage Orders">Manage Orders</a>
            </li>
        }
<li class="nav-item" style="align-self: center;">
    @if (!String.IsNullOrEmpty(UserManager.GetUserAsync(User).Result.ProfilePicture))
    {
        var image_path = $"/Image/{UserManager.GetUserAsync(User).Result.ProfilePicture}";
        <img style="width:40px;height:40px; object-fit:cover; border-radius:30px" src="@image_path" >
    }
    else
    {
        <img style="width:40px;height:40px; object-fit:cover; border-radius:30px" src="~/content/No_image_available.svg">

    }
</li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name.Split("@")[0]!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@returnUrl">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@returnUrl">Login</a>
        </li>
    }
</ul>
