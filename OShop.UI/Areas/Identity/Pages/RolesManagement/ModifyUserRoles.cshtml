@page
@model ModifyUserRolesModel
@{
    ViewData["Title"] = "Modify User Roles";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<form  method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
            Add/Remove Roles for User / @Model.UserName
        </div>
        <div class="card-body">
            @foreach (var userRole in Model.ManageUserRolesVMs)
            {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model.ManageUserRolesVMs[userRole.Index].RoleId" />
                <input type="hidden" asp-for="@Model.ManageUserRolesVMs[userRole.Index].RoleName" />
                <input type="checkbox" asp-for="@Model.ManageUserRolesVMs[userRole.Index].Selected" />
                <label class="form-check-label">
                    @userRole.RoleName
                </label>
            </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary"
                   style="width:auto">Update</button>
        </div>
    </div>
</form>