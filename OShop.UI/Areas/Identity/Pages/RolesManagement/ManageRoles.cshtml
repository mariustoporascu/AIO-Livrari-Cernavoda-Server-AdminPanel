@page
@model ManageRolesModel
@{
    ViewData["Title"] = "Role Manager";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>Role Manager</h1>
<form method="post">
    <div class="input-group">
        <input name="roleName" class="form-control w-25">
        <span class="input-group-btn">
            <button class="btn btn-info" asp-area="Identity" asp-page="/RolesManagement/AddRole">Add New Role</button>
        </span>
    </div>
</form>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model.RolesViewModels)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <form method="post" asp-area="Identity" asp-page="/RolesManagement/RemoveRole" asp-route-id="@role.Id">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Remove
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>