@page
@model IndexModel

@{
    ViewData["Title"] = "Produse";
    var base_path = Request.PathBase;
}
<div class="container">
    <h1>Produse</h1>
    <h2>
        <a class="btn btn-primary" asp-area="AdminPanel" asp-page="/Product/CreateProduct" asp-route-canal="@Model.Canal">Adauga Produs</a>
        <a class="btn btn-primary" asp-area="AdminPanel" asp-page="/Category/Index" asp-route-canal="@Model.Canal">Mergi la Categorii</a>
    </h2>

    @*@using (Html.BeginForm("Index", "Products"))
        {
            <input type="text" name="category" />
            <input type="submit" value="Search by category" />
        }*@
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nume</th>
                @if(@Model.Canal == 1){
                <th>SuperMarket</th>
                }
                else
                {
                <th>Restaurant</th>
                }
                <th>Gramaj</th>
                <th>Unitate de masura</th>
                <th>Pret</th>
                <th>Categorie</th>
                @if(Model.Canal == 1)
                {
                    <th>
                        SubCategorie
                    </th>
                }
                <th>Poza</th>
                <th style="text-align:right">Operatiune</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    @if(@Model.Canal == 1){
                    <td>@Model.SuperMarkets.FirstOrDefault(market => market.SuperMarketId == product.SuperMarketRefId).Name</td>
                    }
                    else
                    {
                    <td>@Model.Restaurante.FirstOrDefault(restaurant => restaurant.RestaurantId == product.RestaurantRefId).Name</td>
                    }
                    <td>@product.Gramaj</td>
                    <td>@Model.UnitatiMasura.FirstOrDefault(unit => unit.UnitId == product.MeasuringUnitId).Name</td>
                    <td>@product.Price</td>
                    <td>
                        @Model.Categ.FirstOrDefault(categ => categ.CategoryId == product.CategoryRefId).Name
                    </td>
                    @if(@Model.Canal == 1 )
                    {
                        <td>
                            @if(product.SubCategoryRefId != null)
                            {
                                @Model.SubCateg.FirstOrDefault(categ => categ.SubCategoryId == product.SubCategoryRefId).Name
                            }
                        </td>
                    }
                    <td>
                        @if (product.Photo != null)
                        {
                            var image_path = $"{base_path}/Image/{product.Photo}";
                            <img id="productphoto" style="width:50px;height:50px; object-fit:cover" src="@image_path">
                        }
                        else
                        {
                            <img id="productphoto" style="width:50px;height:50px; object-fit:cover" src="~/content/No_image_available.svg">
                        }
                    </td>
                    <td>
                        <a class="btn btn-primary" style="float:right" asp-area="AdminPanel" asp-page="/Product/CreateProduct" asp-route-canal="@Model.Canal" asp-route-productId="@product.ProductId">Editeaza</a>
                        <a class="btn btn-danger" style="float:right;margin-left:5px" asp-area="AdminPanel" asp-page="/Product/DeleteProduct" asp-route-canal="@Model.Canal" asp-route-productId="@product.ProductId">Sterge</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>