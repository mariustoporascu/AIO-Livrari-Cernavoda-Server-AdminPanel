@page
@model OrderInfoModel
@{
	ViewData["Title"] = "Order Info";
}
<div class="container">
	<h1>Order details</h1>
	@*@using (Html.BeginForm("Index", "Products"))
		{
		<input type="text" name="category" />
		<input type="submit" value="Search by category" />
		}*@
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Full Name</th>
				<th>Address</th>
				<th>Phone No</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>@Model.OrderInfo.FullName</td>
				<td>@Model.OrderInfo.Address</td>
				<td>@Model.OrderInfo.PhoneNo</td>
			</tr>
		</tbody>
	</table>
	<div class="h-100">
		<form method="post" enctype="multipart/form-data">
			<div asp-validation-summary="All" class="text-danger"></div>
			<input asp-for="@Model.Order.OrderId" type="hidden" />
			<input asp-for="@Model.Order.CustomerId" type="hidden" />
			<input asp-for="@Model.Order.TotalOrdered" type="hidden" />
			<input asp-for="@Model.Order.Created" type="hidden" />
			<select asp-for="@Model.Order.Status" class="form-control" >
				@foreach (var subcategory in Model.OrderStatuses)
				{
					<option value="@subcategory">@subcategory</option>
				}
			</select>
			<span asp-validation-for="@Model.Order.Status" class="text-danger"></span>
			<button type="submit">SUBMIT</button>
		</form>
	</div>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Product</th>
				<th>Quantity</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var product in Model.Products)
			{
				<tr>
					<td>@product.Name</td>
					<td>@Model.ProductInOrders.FirstOrDefault(prod => prod.ProductRefId == product.ProductId).UsedQuantity</td>
				</tr>

			}
		</tbody>
	</table>
	<a class="btn btn-primary" style="float:right" asp-area="AdminPanel" asp-page="/OrderManage">Go Back</a>
</div>